{
  "name": "my-pwa",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build:packaged": "ng build -c packaged --base-href .",
    "package-mobile": "npm run build:packaged -- --outputPath=dist/my-pwa-cordova/www && npm run package-mobile:copy && npm run package-mobile:adjust && npm run package-mobile:pack",
    "package-mobile:copy": "cpy '**' ../../dist/my-pwa-cordova --parents --cwd=resources/cordova",
    "package-mobile:adjust": "replace-in-file '</noscript>' '</noscript><script src=\"cordova.js\"></script>' dist/my-pwa-cordova/www/index.html",
    "package-mobile:pack": "cd dist/my-pwa-cordova && cordova prepare",
    "package-desktop": "npm run build:packaged -- --outputPath=dist/my-pwa-electron && npm run package-desktop:copy && npm run package-desktop:pack",
    "package-desktop:copy": "cpy 'resources/electron/**' dist/my-pwa-electron && cpy dist/my-pwa dist/my-pwa-electron",
    "package-desktop:pack": "electron-packager dist/my-pwa-electron --all --electron-version 3.0.10 --asar --out dist --overwrite"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.0.0-rc.0",
    "@angular/cdk": "^6.2.0",
    "@angular/common": "~7.0.0-rc.0",
    "@angular/compiler": "~7.0.0-rc.0",
    "@angular/core": "~7.0.0-rc.0",
    "@angular/forms": "~7.0.0-rc.0",
    "@angular/http": "~7.0.0-rc.0",
    "@angular/material": "^6.2.0",
    "@angular/platform-browser": "~7.0.0-rc.0",
    "@angular/platform-browser-dynamic": "~7.0.0-rc.0",
    "@angular/platform-server": "~7.0.0-rc.0",
    "@angular/pwa": "^0.8.4",
    "@angular/router": "~7.0.0-rc.0",
    "@angular/service-worker": "~7.0.0-rc.0",
    "core-js": "^2.5.4",
    "dexie": "^2.0.4",
    "rxjs": "~6.3.3",
    "uuid": "^3.3.2",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.9.0-rc.1",
    "@angular/cli": "~7.0.0-rc.2",
    "@angular/compiler-cli": "~7.0.0-rc.0",
    "@angular/language-service": "~7.0.0-rc.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.3.0",
    "cordova": "^8.1.2",
    "cpy-cli": "^2.0.0",
    "electron-packager": "^12.2.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.4.0",
    "replace-in-file": "^3.4.2",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.1.1"
  }
}
